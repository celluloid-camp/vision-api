{
  "extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"]
	},
	"include": ["client/**/*.ts"],
	"exclude": ["node_modules"]
}
